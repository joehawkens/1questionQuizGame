<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Question">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wrongAnswerButton2"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/rightAnswerButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="176dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="18dp" app:layout_constraintHorizontal_bias="1.0"
            android:text="Wilford Woodruff"/>
    <TextView
            android:text="Who was the first president of the United States?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textSize="48sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="84dp" android:textColor="#FF0000"
            android:textAlignment="center"/>
    <Button
            android:text="George Washington"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rightAnswerButton"
            android:textSize="12sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/wrongAnswerButton"
            app:layout_constraintEnd_toStartOf="@+id/wrongAnswerButton"
            android:layout_marginEnd="19dp"/>
    <Button
            android:text="Barrack Obamna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wrongAnswerButton"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/rightAnswerButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="284dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="18dp"/>
    <Button
            android:text="Sacagawea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wrongAnswerButton3"
            android:textSize="12sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/wrongAnswerButton2"/>
</androidx.constraintlayout.widget.ConstraintLayout>